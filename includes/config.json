      "hyper_parameters": {
        "features": [
          "Close",
          "Volume",
          "RSI",
          "MACD",
          "Signal_Line",
          "MACD_Histogram",
          "Upper_BB",
          "Lower_BB"
        ],
        "epochs": 150,
        "batch_size": 16,
        "look_back": 60,
        "callbacks": {
          "early_stopping": {
            "monitor": "val_loss",
            "patience": 20,
            "restore_best_weights": true
          },
