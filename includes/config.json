            "save_file_path": "pd_model.keras",
            "save_best_only": true,
            "monitor": "val_loss",
            "mode": "min"
          },
          "reduce_lr": {
            "monitor": "val_loss",
            "factor": 0.2,
            "patience": 5,
            "min_lr": 0.0001
          }
        },
        "compiling": {
          "optimizer": {
            "name": "Adam",
            "learning_rate": 0.0005
          },
          "loss": "binary_crossentropy",
          "metrics": [
            "accuracy"
          ]
        },
        "model_layers": {
          "first": {
            "bidirectional": {
              "gru": {
                "units": 128,
                "return_sequences": true
              }
            }
          },
          "second": {
            "dropout": 0.4
          },
          "third": {
            "bidirectional": {
              "gru": {
                "units": 64,
                "return_sequences": false
              }
            }
          },
          "fourth": {
            "dropout": 0.4
          },
          "fifth": {
            "dense": {
              "units": 1,
              "activation_function": "sigmoid"
            }
          }
        }
      },
      "datasets_params": {
      }
